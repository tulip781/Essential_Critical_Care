<% if resources.count == 0 %>
<% else %>
  <div class="mixed-resources-wrapper">
    <% resources.each do |r| %>
      <% if r.class.name == "Pdf" %>
        <div class="pdf-resource-wrapper">
          <h5 class="pdf-resource-title"><%= link_to r.title, r.document.service_url, target: :_blank, rel: "noopener noreferrer", class: "link-colour-correct" %></h5>
          <p class="pdf-resource-metadata"><%= r.document.content_type.split('/').last.upcase %> - <%= (r.document.byte_size*0.000001).round(2) %> MB - <%= t('sub_category.uploaded')%> <%= r.document.created_at.strftime("%B %d, %Y - %R")   %> </p>
          <p><%= link_to t('sub_category.view_resource'), r.document.service_url, target: :_blank, rel: "noopener noreferrer", class: "pdf-resource-view-button" %> <%= link_to t('sub_category.download_resource'), cl_image_path(r.document.key, :flags => "attachment:#{r.title_en}"), class: "pdf-resource-download-button" %>  </p>
        </div>
      <% elsif r.class.name == "Video" %>
        <div class="pdf-resource-wrapper">
          <h5 class="pdf-resource-title js-modal-btn " data-video-id= "<%= r.url_code  %>" data-ollie-name= "<%= r.title %>"><%= r.title %></h5>
          <p class="pdf-resource-metadata">YOUTUBE LINK - <%= t('sub_category.uploaded')%> <%= r.created_at.strftime("%B %d, %Y - %R")   %></p>
          <p class='js-modal-btn pdf-resource-stream-button' data-video-id= "<%= r.url_code  %>" data-ollie-name= "<%= r.title %>" ><%= t('sub_category.stream_video') %></p>
        </div>
      <% elsif r.class.name == "Infographic" %>
        <div class="pdf-resource-wrapper-selected-resource">
          <%= link_to r.photo.service_url, target: :_blank, rel: "noopener noreferrer" do %>
            <%= cl_image_tag(r.photo.key, :width=>80, :crop=>"scale", quality: "auto", class: "stop-image-stretch", alt: "image-resource") %>
          <% end %>
          <div class="selected-resource-text-wrap">
            <h5 class="pdf-resource-title"><%= link_to r.title, r.photo.service_url, target: :_blank, rel: "noopener noreferrer", class: "link-colour-correct" %></h5>
            <p class="pdf-resource-metadata"><%= r.photo.content_type.split('/').last.upcase %> <%= (r.photo.byte_size*0.000001).round(2) %> MB - <%= t('secret_sub_category.uploaded')%> <%= r.photo.created_at.strftime("%B %d, %Y - %R")   %> </p>
            <p><%= link_to t('sub_category.view_resource'), r.photo.service_url, target: :_blank, rel: "noopener noreferrer", class: "pdf-resource-view-button" %> <%= link_to t('sub_category.download_resource'), cl_image_path(r.photo.key, :flags => "attachment:#{r.title_en}"), class: "pdf-resource-download-button" %>  </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

